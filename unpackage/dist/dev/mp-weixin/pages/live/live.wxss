.live-box {
  padding: 0rpx 15rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 30rpx;
}
.live-box .live-item {
  display: inline-block;
  box-sizing: border-box;
  margin-bottom: 25rpx;
  width: 330rpx;
  position: relative;
}
.live-box .live-item .conten image {
  width: 100%;
  height: 450rpx;
  border-radius: 30rpx;
}
.live-box .live-item .panel {
  padding-left: 25rpx;
  position: absolute;
  bottom: 20rpx ;
  left: 20rpx;
  width: 80%;
  height: 150rpx;
  background-color: transparent;
  border-radius: 30rpx;
  -webkit-backdrop-filter: blur(5px);
          backdrop-filter: blur(5px);
}
.live-box .live-item .panel .panel-box {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 150rpx;
  padding: 15rpx 0rpx;
  box-sizing: border-box;
}
.live-box .live-item .panel .panel-box .panel-title {
  color: #fff;
}
.live-box .live-item .panel .panel-box .panel-con {
  display: flex;
  justify-content: space-between;
}
.live-box .live-item .panel .panel-box .panel-con .panel-type {
  color: #ffffff;
  opacity: 0.8;
  font-size: 30rpx;
}
.live-box .live-item .panel .panel-box .panel-con text {
  padding-right: 20rpx;
  color: #ffcc00;
  font-size: 30rpx;
}
.live-box .live-item .panel .panel-while {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 30rpx;
  background-color: #fff;
  opacity: 0.4;
  z-index: -1;
}

